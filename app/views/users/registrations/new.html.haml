- provide(:title, "Signup")

.container
  .row
    .col-3
    .col-6
      .card.mb-5.mt-5
        .card-header.text-center
          %h5 Sign up
        .card-body
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!
            .form-group
              = f.label :email, class: "control-label"
              %br/
              = f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email"
            .form-group
              = f.label :password, class: "control-label"
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password, class: "form-control", autocomplete: "off"
            .form-group
              = f.label :password_confirmation, class: "control-label"
              %br/
              = f.password_field :password_confirmation, class: "form-control", autocomplete: "off"
              
            //profile fields
            = f.fields_for :profile_attributes, Profile.new do |p|
              .form-group
                = p.label :name, class: "control-label"
                %br/
                = p.text_field :name, class: "form-control", autofocus: true, autocomplete: "name"
              .form-group
                = p.label :birth, class: "control-label"
                %br/
                = p.date_field :birth, class: "form-control"
              .form-group
                = p.label :phone, class: "control-label"
                %br/
                = p.text_field :phone, class: "form-control"
              .form-group
                = p.label :address, class: "control-label"
                %br/
                = p.text_field :address, class: "form-control"
              .form-group
                = p.label :postal_code, class: "control-label"
                %br/
                = p.text_field :postal_code, class: "form-control"
            .actions
              = f.submit "Sign up", class: "btn btn-primary btn-block mb-2"
          = render "devise/shared/links"
    .col-3