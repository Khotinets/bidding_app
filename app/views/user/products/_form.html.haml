.container
  .row.no-gutters
    .col-3
    .col-6
      .card.mb-5.mt-5
        .card-header.text-center
          %h5 New product
        .card-body
          = form_for([:user, @product]) do |form|
            - if product.errors.any?
              #error_explanation
                %h2
                  = pluralize(product.errors.count, "error")
                  prohibited this product from being saved:
                %ul
                  - product.errors.full_messages.each do |message|
                    %li= message
            .form-group
              = form.label :category_id, class: "control-label"
              = collection_select(:product, :category_id, Category.all, :id, :name, {}, {:class=>'form-control'})
            .form-group
              = form.label :name, class: "control-label"
              = form.text_field :name, id: :product_name, class: "form-control"
            .form-group
              = form.label :description, class: "control-label"
              = form.text_area :description, id: :product_description, class: "form-control"
            .form-group
              = form.label :minimal_price, class: "control-label"
              = form.text_field :minimal_price, id: :product_minimal_price, class: "form-control"
            .form-group
              = form.label :current_price, class: "control-label"
              = form.text_field :current_price, id: :product_current_price, class: "form-control"
            .actions
              = form.submit 'Create product', class: "btn btn-primary btn-block mb-2"
    
