- provide(:title, 'New Category')

%h1 Create new Category
.row
  .col-md-6.col-md-offset-3
    = form_for(@category, url: categories_path) do |c|
      .form-group
        = c.label :name
        = c.text_field :name, class: "form-control"
      .form-group
        = c.label :description
        = c.text_area :description, class: "form-control"
      = c.submit "Create Category", class: "btn btn-primary btn-block"
