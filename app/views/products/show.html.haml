%p#notice= notice
%p
  %strong User:
  = @product.user_id
%p
  %strong Category:
  = @product.category_id
%p
  %strong Name:
  = @product.name
%p
  %strong Description:
  = @product.description
%p
  %strong Minimal price:
  = @product.minimal_price
%p
  %strong Current price:
  = @product.current_price
%p
  %strong Auction status:
  = @product.auction_status
= link_to 'Edit', edit_product_path(@product)
|
= link_to 'Back', products_path

- if !@product.has_auction?
  = form_for (Auction.new) do |f|
    = f.hidden_field :product_id, :value => @product.id
    = f.hidden_field :user_id, :value => current_user.id
    = f.submit "Add to auction"
- else
  = button_to "Remove from auction", auction_path(@product.auction.id), method: :delete
