    <%= form.text_area :description, id: :product_description %>
  </div>

  <div class="field">
    <%= form.label :minimal_price %>
    <%= form.text_field :minimal_price, id: :product_minimal_price %>
  </div>

  <div class="field">
    <%= form.label :current_price %>
    <%= form.text_field :current_price, id: :product_current_price %>
